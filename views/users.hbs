<main class="container">
  <div class="bg-light p-5 rounded mt-3">
    <h1>Listar Usuarios</h1>

{{#if table}}

<table class="table table-striped">
  <thead>
    <tr>
      <th scope="col">#ID</th>
      <th scope="col">Nome</th>
      <th scope="col">E-Mail</th>
      <th scope="col">Ações</th>
    </tr>
  </thead>
  <tbody>

{{#each usuarios}}
  
    <tr>
      <th scope="row">{{id}}</th>
      <td>{{nome}}</td>
      <td>{{email}}</td>
      <td>
        <div class="row g-1">
          <div class="col-6 col-md-4"> <a href="./editar" class="w-100 btn btn-info">Editar</a></div>
          <div class="col-6 col-md-4"> <a href="" class="w-100 btn btn-danger">Deletar</a></div>
        </div>
      </td>
    </tr>

{{/each}}

  </tbody>
</table>

{{else}}
  <div class="card mt-4">
    <div class="card-body">
      Nenhum dado encontrado!
    </div>
  </div>
{{/if}}

  </div>
</main>